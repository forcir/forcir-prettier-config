{
    "name": "@forcir/prettier-config",
    "version": "1.0.2",
    "private": false,
    "description": "Shared configuration for a consistent experience using Prettier.",
    "license": "MIT",
    "type": "module",
    "main": "./.prettierrc.json",
    "files": [
        "./.prettierrc.json"
    ],
    "scripts": {
        "format": "prettier --check \"**/*.{cjs,js,json,md,ts,tsx}\"",
        "format:fix": "prettier --write \"**/*.{cjs,js,json,md,ts,tsx}\""
    },
    "prettier": "./.prettierrc.json",
    "devDependencies": {
        "prettier": "3.0.1"
    },
    "peerDependencies": {
        "prettier": ">=3.0"
    },
    "peerDependenciesMeta": {
        "prettier": {
            "optional": false
        }
    },
    "packageManager": "pnpm@8.6.11"
}
